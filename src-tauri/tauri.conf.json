{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Restic Restore",
  "version": "0.2.0",
  "identifier": "app.restic-restore",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Restic Restore",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 700
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self' data:; img-src 'self' data: blob:; script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/montypanton/Restic-Restore/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDhFNEVDOTQ1QUUyRUMxQTcKUldTbndTNnVSY2xPanVLS3NVdnNyMDZhVVFCcVRHcFZQTDAvaElwOGZTU2QvQ2dkRUtCUTBOL0IK"
    }
  }
}
